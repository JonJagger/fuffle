
.fuffle
    background Moccasin
    padding 1em
    .name
        float left        
    .show-question
        font-size 2.5em
        margin 0 auto  /* CENTERING ? */        
    .answer-count
        font-size 1em        
    .answer
        background GhostWhite
        padding-left 1em
        padding-right 1em
        text-align center
        border 2px solid Moccasin
        font-size 2em
    table
        margin 0 auto
        border-spacing 1px
    td
        padding 1px
    input[type=button]
        background GhostWhite
        border-radius 10px
        font-size 1.5em 
        padding 0.25em
        color Black
        cursor pointer
        font-style normal        
        &:disabled
            color DarkGray
            cursor default
            font-style italic
    textarea
        text-align right
        font-size 2em 
        width 15em
        height 1.2em
