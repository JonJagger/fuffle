
centered()
    display table
    margin 0 auto

.ask, .answer, .show
    background Moccasin
    padding 4em
.fuffle
    float right
    font-size 1em    

.question
    centered()
    font-size 2.5em
.stats
    centered()
.one-answer
    background GhostWhite
    padding-left 0.5em
    padding-right 0.5em
    text-align center
    border 2px solid Moccasin
    font-size 2em
    
textarea
    text-align left
    font-size 2em 
    width 15em
    height 1.2em
input[type=button]
    background GhostWhite
    border-radius 10px
    font-size 1.5em 
    padding 0.25em
    color Black
    cursor pointer
    font-style normal        
    &:disabled
        color DarkGray
        cursor default
        font-style italic
table
    centered()
    border-spacing 1px
td
    padding 1px
    

