
centered()
    display table
    margin 0 auto

.ask, .reply, .show
    background Moccasin
    
.app-name
    float left
    font-size 1em    
.source-link
    float right

    
.question
    centered()
    margin 0 auto
    font-size 2.5em 
textarea
    text-align right
    font-size 2em 
    width 15em
    height 1.2em
input[type=button]
    background GhostWhite
    border-radius 10px
    font-size 1.5em 
    padding 0.25em
    color Black
    cursor pointer
    font-style normal        
    &:disabled
        color DarkGray
        cursor default
        font-style italic

table
    centered()
    border-spacing 1px
td
    padding 1px

.answer
    background GhostWhite
    padding-left 1em
    padding-right 1em
    text-align center
    border 2px solid Moccasin
    font-size 2em

