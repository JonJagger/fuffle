
font_family()
    font-family Impact, Charcoal, sans-serif 

round_corners()
    border-radius 10px

thin_space()
    content "\2009"

spaced()
    margin-top 15px
    margin-left 15px

bubbled()
    background LightBlue
    padding 25px
    round_corners()
    spaced()
    
.ask, .answer, .show
    font_family()
    font-size 2em
    
.fuffle
    bubbled()
    font_family()
    font-size 0.6em
    color Gray
    .initial
        display inline-block
        color Black
        &:after
            thin_space()
    .source
        font-size 0.75em
.tip
    font-size 0.5em
.content
    bubbled()
    width 18em    
.help
    bubbled()
    font-size 0.5em
    
.stats
    bubbled()
    font-size 0.5em
    .name
        text-align right
        &:after
            content ":"
    .value
        text-align left
        &:before
            content " "
        
.answers-container
    margin-top 15px
    margin-left 15px    
    width 18em
    height 12.5em
    overflow-y auto
.one
    font_family()
    display inline-block
    background White
    padding-left 0.3em
    padding-right 0.3em    
    round_corners()
    margin-bottom 6px
    margin-right 1px
    border 2px solid LightBlue
        
input[type=text]
    display block
    font_family()
    font-size 1em 
    background GhostWhite
    width 18em

tr
    vertical-align top